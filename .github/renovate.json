{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>sanity-io/renovate-config"],
  "ignorePresets": [
    ":ignoreModulesAndTests",
    "github>sanity-io/renovate-config:group-non-major"
  ],
  "packageRules": [
    {
      "group": { "semanticCommitType": "chore" },
      "matchDepTypes": [
        "dependencies",
        "devDependencies",
        "engines",
        "optionalDependencies",
        "peerDependencies"
      ],
      "matchManagers": ["npm"],
      "semanticCommitType": "chore",
      "description": "Group all dependencies from the app directory",
      "matchFileNames": ["apps/**/package.json"],
      "groupName": "App dependencies"
    },
    {
      "matchDepNames": ["next", "@next/bundle-analyzer"],
      "matchFileNames": [
        "apps/next-server-only/package.json",
        "apps/next-no-cache/package.json"
      ],
      "followTag": "canary"
    },
    {
      "description": "Use a TypeScript version compatible with the Studio Schema API",
      "allowedVersions": "<=5.3",
      "matchDepTypes": ["dependencies", "devDependencies", "resolutions"],
      "matchPackageNames": ["typescript"]
    },
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "excludePackageNames": [
        "@sveltejs/kit",
        "svelte",
        "vue",
        "next",
        "vue-router",
        "nuxt",
        "@remix-run/react"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchDepNames": ["sanity", "@sanity/util"],
      "matchFileNames": [
        "packages/presentation/package.json",
        "packages/preview-url-secret/package.json",
        "packages/visual-editing-helpers/package.json"
      ],
      "matchDepTypes": ["devDependencies", "peerDependencies"],
      "schedule": ["at any time"],
      "rangeStrategy": "bump",
      "groupSlug": "sanity",
      "semanticCommitType": "chore"
    },
    {
      "matchDepNames": [
        "@sanity/client",
        "nanostores",
        "@nanostores/vue",
        "nuxt"
      ],
      "semanticCommitType": "fix"
    }
  ]
}
